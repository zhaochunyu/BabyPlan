extends layout
block head
            link(href='dist/css/bootstrap-switch.css', type='text/css', rel="stylesheet")
block content
  h1= title
  div.container
      div.row
            div.switch.has-switch(data-on-label="关机" data-off-label="开机")
                  input(type="checkbox"  checked  name='check')           
      div.row
          div.col-xs-6.col-md-4 
             button( type="button" class="btn btn-primary") 关闭网络 
          div.col-xs-6.col-md-4 
             button( type="button" class="btn btn-info") 电脑锁频
          div.col-xs-6.col-md-4 
             button( type="button" class="btn btn-danger") 关闭游戏
      div.row
      
       script(src="dist/js/bootstrap-switch.js") 
       script.
                      $("[name='check']").bootstrapSwitch();    
       script.
             $('#switch').on('switch-change', function (e, data) {   var $el = $(data.el)  , value = data.value;  console.log(e, $el, value);});
